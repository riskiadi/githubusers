<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user8" />

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/userAvatar"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img1"
                android:layout_alignBottom="@id/img1"
                android:layout_toEndOf="@+id/img1"
                android:text="@string/dummyUsername" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/img1"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/userAvatar"
                android:src="@drawable/ic_baseline_assignment_ind_24" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/usernameTxt"
                android:layout_alignTop="@id/img2"
                android:layout_alignBottom="@id/img2"
                android:layout_toEndOf="@+id/img2"
                android:text="@string/dummyName" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/img2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/userAvatar"
                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/nameTxt"
                android:layout_alignTop="@id/img3"
                android:layout_alignBottom="@id/img3"
                android:layout_toEndOf="@+id/img3"
                android:text="@string/dummyLocation" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>